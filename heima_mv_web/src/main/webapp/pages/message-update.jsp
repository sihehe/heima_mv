				<li class="active">留言表单</li>
			</ol>
			</section>
			<!-- 内容头部 /-->

			<form action="${pageContext.request.contextPath}/message/getMessage.do"
				  method="post">
				<!-- 正文区域 -->
				<section class="content">
					<div class="box-body">
						<!--tab页-->
						<div class="nav-tabs-custom">
							<!--tab头-->
							<ul class="nav nav-tabs">
								<li class="active">
									<a href="#tab-form" data-toggle="tab">发布留言</a>
								</li>
							</ul>
							<!--tab头/-->

							<!--tab内容-->
							<div class="tab-content">
								<!--表单内容-->
								<div class="tab-pane active" id="tab-form">
									<div class="row data-type">
										<input type="hidden" name="id" value="${message.id}"/>
										<div class="col-md-2 title">留言标题</div>
										<div class="col-md-10 data">
											<input type="text" class="form-control" placeholder="留言标题" name="title"
												   value="${message.title}">
										</div>

										<div class="col-md-2 title">客户留言</div>
										<div class="col-md-10 data">
											<input type="text" class="form-control" placeholder="客户留言" name="messages"
												   value="${message.messages}">
										</div>

										<div class="box ">
											<div class="col-md-2 title1 rowHeight2x">回复留言</div>
											<!-- /.box-header -->
											<div class="col-md-10 box-body pad">

                                     <textarea class="textarea" name="replyMessage" placeholder="请在这里编辑回复的留言信息" value="${message.replyMessage}"
											   style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
										 ${message.replyMessage}
                                     </textarea>

											</div>
										</div>

										<div class="col-md-2 title">日期</div>
										<div class="col-md-10 data">
											<div class="input-group date">
												<div class="input-group-addon">
													<i class="fa fa-calendar"></i>
												</div>
												<input type="text" class="form-control pull-right" id="datepicker-a3"
													   name="messagedate" value="${message.messagedateStr}" placeholder="点击选择发布时间">
											</div>
										</div>


										 <div class="col-md-2 title">留言状态</div>
                                         <div class="col-md-10 data">
                                             <select class="form-control" name="messageStatus" value="${message.messageStatusStr}">
													 <option <c:if test="${message.messageStatusStr=='未回复'}">selected</c:if> value="0">未回复
													 </option>
													 <option <c:if test="${message.messageStatusStr=='已回复'}">selected</c:if> value="1">已回复
													 </option>
                                                     <option <c:if test="${message.messageStatusStr=='未发送'}">selected</c:if> value="2">未发送
                                                     </option>
                                                     <option <c:if test="${message.messageStatusStr=='已发送'}">selected</c:if> value="3">已发送
                                                     </option>
                                             </select>
                                         </div>

										<div class="col-md-2 title"></div>
										<div class="col-md-10 data text-center">
											<button type="submit" class="btn bg-maroon">提交</button>
											<button type="button" class="btn bg-default" onclick="history.back(-1);">返回
											</button>
										</div>
									</div>
								</div>
								<!--表单内容/-->
							</div>
							<!--tab内容/-->
						</div>
						<!--tab页/-->
					</div>

				</section>
				<!-- 正文区域 /-->
			</form>
